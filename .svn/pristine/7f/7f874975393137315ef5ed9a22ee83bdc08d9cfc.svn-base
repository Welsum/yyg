@media only screen and (min-width: 1200px) {
	.web-panel {
		min-width: 350px;
	}

}
@media only screen and (min-width: 641px) and (max-width: 1199px) {
	.web-panel {
		margin: 0 auto;
		width: 60%;
	}
		.web-body{
		background: rgb(255, 121, 58);
	}
}
@media only screen and (min-width: 0px) and (max-width: 640px) {
	.web-panel {
		margin: 0 auto;
		width: 100%;
	}
		.web-body{
		background: rgb(255, 121, 58);
	}
}