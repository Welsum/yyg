<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge"/>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link rel="stylesheet" type="text/css" href="css/bootstrap.css"/>
		<script src="js/jquery.min.js" type="text/javascript" charset="utf-8"></script>
		<script src="js/bootstrap.min.js" type="text/javascript" charset="utf-8"></script>
		
		<style type="text/css">
			ul{
				margin: 0;
				padding: 0;
			}
			.container{
				padding: 0;
			}
			.header{
				margin: 1% 0;
			}
			.logo-point{
				padding: 0;
			}
			.number{
				font-size: 15px;
				margin-top: 4.5em;
			}
			.number ul.list-inline{
				width: 120%;
				text-align: center;
			}
			.number li.num{
				font-size: 20px;
			}
			.search-body{
				padding: 0;
				margin-top: 5%;
				float: right;
			}
			.search-body input{
				display: block;
				float: left;
				width: 70%;
				margin-left: 10%;
			}
			.search-body button{
				display: inline-block;
				float: right;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<div class="row header">
				<!--logo部分-->
				<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 logo-point">
					<img class="img-responsive" src="img/logo.png" alt=""/>
				</div>
				<!--参与人次+搜索框部分-->
				<div class="col-lg-10 col-md-10 col-cm-10 col-xs-10">
					<div class="row">
						<!--参与人次部分-->
						<div class="col-lg-8 col-md-8 visible-lg-block visible-md-block number">
							<ul class="list-inline">
								<li class="">累计参与</li>
	    						<li class="num">1</li>
	    						<li class="num">2</li>
	    						<li class="">,</li>
	    						<li class="num">2</li>
	    						<li class="num">3</li>
	    						<li class="num">3</li>
	    						<li class="">,</li>
	    						<li class="num">2</li>
	    						<li class="num">5</li>
	    						<li class="num">6</li>
	    						<li class="">,</li>
	    						<li class="num">7</li>
	    						<li class="num">3</li>
	    						<li class="num">0</li>
	    						<li class="">人次</li>
							</ul>
						</div>
						<!--搜索框部分-->
						<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 search-body">
							<div class="form">
								<div class="form-group">
									<input type="text" class="form-control" placeholder="请输入搜索的内容"/>
									<button class="btn btn-danger" type="button">搜索</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
